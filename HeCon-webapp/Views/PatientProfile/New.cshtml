@model HeCon_webapp.Models.PatientProfile

@{
    ViewBag.Title = "New";
}

<h2>Complete the page profile</h2>

<form method="post" action="/PatientProfile/New">
    @Html.HiddenFor(m => m.UserId)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Label("PatientName", "Full Name")
    <br />
    @Html.TextBox("PatientName", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.PatientName, "Titlul este obligatoriu", new { @class = "text-danger " })

    <br /><br />
    @Html.Label("Age", "Age")
    <br />
    @Html.TextArea("Age", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Age, "Continutul este obligatoriu", new { @class = "text-danger " })
    <br>

    <br />
    @Html.Label("HealthIssues", "Medical Issues")
    <br />
    @Html.TextArea("HealthIssues", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.HealthIssues, "Continutul este obligatoriu", new { @class = "text-danger " })
    <br>

    <br />
    @Html.Label("SurgicalProcedures", "Surgical Interventions")
    <br />
    @Html.TextArea("SurgicalProcedures", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.SurgicalProcedures, "Continutul este obligatoriu", new { @class = "text-danger " })
    <br>

    <br />
    @Html.Label("FamilyDoctor", "Family Doctor")
    <br />
    @Html.TextArea("FamilyDoctor", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.FamilyDoctor, "Continutul este obligatoriu", new { @class = "text-danger " })
    <br>

    <button class="btn btn-sm btn-success" type="submit">Save profile</button>
</form>
