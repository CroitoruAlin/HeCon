@model HeCon_webapp.Models.ApplicationUser

@{
    ViewBag.Title = "Patients XRays";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

@foreach (var user in ViewBag.UsersList)
{
    <div class="panel-heading">Nume utilizator: @user.UserName</div>
    <div class="panel-body">
        <i class="glyphicon glyphicon-envelope"></i> User email: <span class="label label-default">@user.Email</span>
        <br /><br />

        @if (@user.PhoneNumber != null)
        {
            <i class="glyphicon glyphicon-phone"></i>@:User phone:<span class="label label-default">@user.PhoneNumber</span>
        }
    </div>
    <div class="panel-footer">
        <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id">Show user</a>
        <a class="btn btn-sm btn-info" href="/XRay/ShowPatientXray/@user.Id" style="float:right">Vezi XRay-uri</a>

    </div>
        <br /><br />


}



